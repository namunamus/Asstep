<%= form_with model: @event, local: true do |f| %>
  <div class="form-row">
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title, required: true %>
  </div>

  <div class="form-row">
    <%= f.label :body, "説明" %><br>
    <%= f.text_area :body, rows: 6 %>
  </div>

  <div class="form-row">
    <%= f.label :cover, "代表画像（1枚）" %><br>
    <% if @event.cover.attached? %>
      <div class="form-preview">
        <%= image_tag @event.cover, class: "form-preview__img" %>
      </div>
    <% end %>
    <%= f.file_field :cover, accept: "image/*" %>
  </div>

  <div class="form-row">
    <%= f.label :photos, "活動写真（複数OK）" %><br>
    <% if @event.photos.attached? %>
      <div class="form-previewGrid">
        <% @event.photos.each do |ph| %>
          <%= image_tag ph, class: "form-previewGrid__img" %>
        <% end %>
      </div>
    <% end %>
    <%= f.file_field :photos, accept: "image/*", multiple: true %>
  </div>

  <%= f.submit class: "members-btn members-btn--primary" %>
<% end %>
