<%= form_with url: tweets_search_path, method: :get, local: true do |f|%>
    <div class="search-form">
    <%= text_field_tag :q, params[:q], placeholder: "検索ワードを入力" %>
    <%= f.submit "検索", class: "btn-search" %>
    </div>
<% end %>




<div class="tweets-container">
<% @tweets.each do |t| %>
    <div class="tweet">
    <%= t.body %>
    <%= t.created_at %>
    <%= link_to "詳細へ", tweet_path(t.id) %>
    <%= link_to "編集する", edit_tweet_path(t.id) %>
    <%= button_to "削除する", tweet_path(t.id), data: { turbo_method: :delete } %>
    </div>
<% end %>
</div>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
